<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.face.MainActivity">

    <com.android.rgk.common.camera.ui.PreviewSurfaceView
        android:id="@+id/rgb_camera_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.android.rgk.common.camera.ui.PreviewSurfaceView
        android:id="@+id/infrared_camera_surface"
        android:layout_width="4px"
        android:layout_height="3px" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right" />

    <FrameLayout
        android:id="@+id/overlay_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/dialpad_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>